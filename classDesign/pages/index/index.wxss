/* pages/index/index.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  justify-content: flex-start;
  /* background-color: rgb(156, 23, 78) */
}

.table {
  margin-top: 30px;
  border: 1px solid #f0f0f0;
  width: 100%;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #ccc;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.op{
  width:60%;
}

button{
  padding:0;
  width: 40px;
  height: 30px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.buttons{
  width:100%;
  display: flex;
  align-items: center;
}

.btnSave{
  margin-top: auto;
  color:#fff;
  background: #5cb85c;
  font-size: 16px;
  width: 100px;
  height: 40px;
  position:absolute;
  bottom:50px;
  left: 50%;
  transform:translateX(-50%)
}

.logout{
  position: absolute;
  right: 0;
  top: 0;
  border:none;
  background: red;
  margin: 0;
  padding: 0;
  width: 60px;
  font-size:12px;
  color: #fff;
}