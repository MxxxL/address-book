/* pages/index/index.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  justify-content: flex-start;
  /* background-color: rgb(156, 23, 78) */
}

.table {
  border: 0px solid darkgray;
  width: 100%;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #ccc;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.op{
  width:60%;
}

button{
  padding:0;
  width: 40px;
  height: 30px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.buttons{
  width:100%;
  display: flex;
  align-items: center;
}